@model todo_api.Models.UpdateEmployeeViewModel

@{ 
}

<h1>Edit Employee</h1>
<form method="post" action="Add" class="mt-1">
    <div class="form-group">
        <label for="">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly>
    </div>

    <div class="form-group">
        <label for="">Name</label>
        <input type="text" class="form-control" asp-for="Name">
    </div>
 
    <button type="submit" class="btn btn-primary mt-1">Submit</button>
    <button type="submit" class="btn btn-danger mt-1" asp-action="Delete" asp-controller="Employees">Delete</button>

</form>
